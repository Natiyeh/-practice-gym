<div>
  <h1 class="profile">My Profile</h1>
  <div class="container d-flex">
    <div class="profile-container-host">
      <div class='profile-card card-padding shadow'>
        <div class="profile-picture">
          <%= cl_image_tag @user.photo.key, class: 'avatar-large' %>
        </div>
        <div class='border-bottom card-padding'>
          <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %>
        </div>
        <div class='border-bottom card-padding'>
          <div>Joined in <b><%= @user.created_at.to_s.match(/^\d+/) %></b>
          </div>
        </div>
        <div class='border-bottom card-padding'>
          <div>
            <i class="fas fa-comment-alt"></i>
          </div>
        </div>
        <div class="card-padding-edit">
          <%= link_to 'Edit Profile', edit_user_path(@user), class:'btn btn-primary' %>
        </div>
        <div class="card-padding">
          <%= link_to 'Change Password/Delete Account', edit_user_registration_path(@user), class:'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="about-me-container">
      <div>
        <h4 class="reviews">Membership Status</h4>
      </div>
      <div class="three-listings overflow-auto shadow">
        <div class="list-group list-group-horizontal">

        </div>
      </div>
      <div>
        <h4 class="reviews">Upcoming Classes</h4>
      </div>
      <div class="three-listings overflow-auto shadow">
        <div class="list-group list-group-horizontal">
        </div>
      </div>
      <div>
        <h4 class="reviews">Recent Orders</h4>
      </div>
      <div class="three-listings overflow-auto shadow">
        <div class="list-group list-group-horizontal">

        </div>
      </div>
    </div>
  </div>
</div>

<% if current_user.admin %>
  <%= link_to "All Users", users_path %>
<% end %>
