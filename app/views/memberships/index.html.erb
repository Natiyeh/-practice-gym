<div class="row">
  <% @memberships.each do |membership| %>
    <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to membership.name, membership_path(membership) %></h5>
            <p class="card-text"><%= membership.description %></p>
            <a href="#" class="btn btn-primary">$<%= membership.price %></a>
          </div>
        </div>
    </div>
  <% end %>
</div>


<% if current_user.admin %>
  <%= link_to "create membership", new_membership_path  %>
<% end %>
